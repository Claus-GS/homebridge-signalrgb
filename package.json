{
  "name": "homebridge-signalrgb",
  "displayName": "Homebridge SignalRGB",
  "version": "1.0.0",
  "description": "Control SignalRGB lighting scenes from Homebridge and HomeKit",
  "author": "Claus",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "config.schema.json"
  ],
  "engines": {
    "node": ">=18.0.0",
    "homebridge": ">=1.8.0"
  },
  "keywords": [
    "homebridge-plugin",
    "homebridge-platform",
    "signalrgb",
    "rgb",
    "homekit",
    "lighting"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Claus-GS/homebridge-signalrgb.git"
  },
  "bugs": {
    "url": "https://github.com/Claus-GS/homebridge-signalrgb/issues"
  },
  "homepage": "https://github.com/Claus-GS/homebridge-signalrgb#readme",
  "homebridge": {
    "platforms": [
      {
        "platform": "SignalRgbPlatform",
        "name": "SignalRGB"
      }
    ]
  },
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "watch": "tsc -w",
    "prepare": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.0.0",
    "homebridge": "^1.9.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.3.0"
  }
}